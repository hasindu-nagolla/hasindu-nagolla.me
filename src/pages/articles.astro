---
// src/pages/articles.astro
import { ARTICLES } from "../data/articles";
import Layout from "../layouts/Layout.astro";
---

<Layout title="My Articles">
  <section class="max-w-3xl mx-auto py-12 px-4">
    <h1 class="text-3xl font-bold mb-6 text-center text-neutral-100">Articles & Blogs</h1>
    <ul class="space-y-6">
      {ARTICLES.map((article) => (
        <li class="p-4 bg-neutral-900/50 rounded-lg hover:bg-neutral-800/80 transition backdrop-blur-sm">
          <a href={article.url} target="_blank" rel="noopener noreferrer" class="block">
            <div class="flex items-center gap-3">
              {article.logo && <img src={article.logo} class="w-8 h-8" alt={article.platform} />}
              <div>
                <h2 class="text-lg font-semibold text-neutral-100 hover:text-indigo-400">{article.title}</h2>
                <p class="text-sm text-neutral-400">{article.platform} â€” {article.date}</p>
              </div>
            </div>
            <p class="mt-2 text-sm text-neutral-300">{article.description}</p>
          </a>
        </li>
      ))}
    </ul>
  </section>
</Layout>
